{
	"compilerOptions": {
		"target": "es2016",
		"lib": [
			"ES2015",
			"ES2016",
			"ESNext"
			],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@__tests__/*": ["./tests/*"]
		},
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": true,
		// "strictBindCallApply": true,
		"strictPropertyInitialization": false,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"include": [
		"./ormconfig.ts",
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
}
